{
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "plugins": ["react"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "es2021": true
  },
  "rules": {
    "react/prop-types": ["error", { "skipUndeclared": true }], // Enforce Proptypes
    "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }], // Disallow unused variables (except prefixed with _)
    "no-unused-imports": ["error", { "namedImports": true }]// Disallow unused named imports
  }
}
